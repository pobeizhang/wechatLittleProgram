page{
    background: #B3D4DB;
}
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.user-avatar{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin-top: 160rpx;
}
.user-name{
    margin-top: 100rpx;
    font-size: 32rpx;
    font-weight: bold;
}
.button-box{
    margin-top: 200rpx;
    border: 1px solid #405f80;
    width: 200rpx;
    height: 80rpx;
    text-align: center;
    border-radius: 5px;
}
.button{
    font-size: 22rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #405f80;
}